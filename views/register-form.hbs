<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title></title>
</head>

<body>
  <section class="register-container">
    <form class="basic-info" role="register-form">
      <label for="basic-info__name">Restaurant</label>
      <input type="text" class="basic-info__name">
      <label for="basic-info__address">Address</label>
      <input type="text" placeholder="i.e. 123 Narkal Street Glitter, CO 12345" class="basic-info__address">
      <label for="basic-info__phone">Phone</label>
      <input type="text" placeholder="###-###-####" class="basic-info__phone">
      <label for="basic-info__hours">Hours</label>
      <input type="text" placeholder="i.e. 10am-10pm" class="basic-info__hours">
      <label for="basic-info__email">Email</label>
      <input type="email" placeholder="restaurant@gmail.com" class="basic-info__email">
      <label for="basic-info__menu">Menu</label>
    </form>
    <form class="expense">
      <p>Expense Level</p>
      <input type="checkbox" class="expense__1">
      <label for="expense__1">$</label>
      <input type="checkbox" class="expense__2">
      <label for="expense__2">$$</label>
      <input type="checkbox" class="expense__3">
      <label for="expense__3">$$$</label>
      <input type="checkbox" class="expense__4">
      <label for="expense__4">$$$$</label>
    </form>
    <!-- add action="file path" -->
    <form class="menu">
      <input type="file" class="menu__file">
      <input type="submit" class="menu__submit" accept="image/*">
    </form>
    <!-- add social media not sure how to add accounts -->

  </section>

</body>

</html>
