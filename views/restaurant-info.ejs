<!DOCTYPE html>
<html>

<head>
  <% include ./head %>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/stylesheets/restaurant-info.css">
</head>

<body>
  <div class="wrapper">
    <section class="register-container">
      <p class="info__p">BASIC INFORMATION</p>
      <form class="basic-info" role="register-form">
        <article class="basic-info--padding">
          <label for="basic-info__name">Restaurant</label>
          <input type="text" class="basic-info__name">
          <label for="basic-info__address">Street Address</label>
          <input type="text" placeholder="101 Rainbow Street" class="basic-info__address">
          <label for="basic-info__city">City</label>
          <input type="text" placeholder="Glitterville" class="basic-info__city">
          <label for="basic-info__state">State</label>
          <input type="text" placeholder="CO" class="basic-info__state">
        </article>
        <article class="basic-info--padding">
          <label for="basic-info__zipcode">Zipcode</label>
          <input type="text" placeholder="12345" class="basic-info__zipcode">
          <label for="basic-info__phone">Phone</label>
          <input type="text" placeholder="###-###-####" class="basic-info__phone">
          <label for="basic-info__facebook">Facebook</label>
          <input type="text" placeholder="Link to Facebook Page" class="basic-info__facebook">
        </article>
        <article class="basic-info--padding">
          <label for="basic-info__twitter">Twitter</label>
          <input type="text" placeholder="Link to Twitter Page" class="basic-info__twitter">
          <label for="basic-info__city">Instagram</label>
          <input type="text" placeholder="Link to Instagram Page" class="basic-info__city">
          <label for="basic-info__hours">Hours</label>
          <input type="text" placeholder="10am-10pm" class="basic-info__hours">
          <label for="basic-info__email">Email</label>
          <input type="email" placeholder="restaurant@gmail.com" class="basic-info__email">
        </article>
        <article class="profile-menu-container">
          <aside class="profile-img">
            <label for="basic-info__profile-img">Profile Image</label>
            <input type="file" class="profile-img__file">
            <input type="submit" class="profile-img__submit" accept="image/*">
          </aside>
          <!-- add action="file path" -->
          <aside class="menu">
            <label for="basic-info__menu">Menu</label>
            <input type="file" class="menu__file">
            <input type="submit" class="menu__submit" accept="image/*">
          </aside>
        </article>
      </form>
      <article class="expense--align">
        <form role="form">
          <p class="expense__p">Expense Level</p>
          <label for="expense__1"><i class="fas fa-dollar-sign"></i></label>
          <input type="radio" name="expense-level" value="level-one" id="expense__1">
          <label for="expense__2"><i class="fas fa-dollar-sign"></i><i class="fas fa-dollar-sign"></i></label>
          <input type="radio" name="expense-level" value="level-two" id="expense__2">
          <label for="expense__3"><i class="fas fa-dollar-sign"></i><i class="fas fa-dollar-sign"></i><i class="fas fa-dollar-sign"></i></label>
          <input type="radio" name="expense-level" value="level-three" id="expense__3">
          <label for="expense__4"><i class="fas fa-dollar-sign"></i><i class="fas fa-dollar-sign"></i><i class="fas fa-dollar-sign"></i><i class="fas fa-dollar-sign"></i></label>
          <input type="radio" name="expense-level" value="level-four" id="expense__4">
        </form>
      </article>
      <button class="next-btn"><a class="next-btn__a" href="/restaurant-type">Next<i class="fas fa-angle-right"></i></a></button>
    </section>
  </div>
</body>

</html>
